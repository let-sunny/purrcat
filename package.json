{
  "name": "purrcat",
  "version": "0.1.5",
  "description": "Lightweight WebSocket client with auto-reconnect, backoff strategies, bounded message buffering, and async iterables",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --minify",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build && npm test",
    "version": "npm run build"
  },
  "keywords": [
    "websocket",
    "ws",
    "client",
    "realtime",
    "connection",
    "reconnect",
    "backoff",
    "async-iterable",
    "generator",
    "abort-signal",
    "typescript",
    "message-buffer",
    "bounded-buffer"
  ],
  "author": "minseon",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "24.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/let-sunny/purrcat.git"
  },
  "bugs": {
    "url": "https://github.com/let-sunny/purrcat/issues"
  },
  "homepage": "https://github.com/let-sunny/purrcat#readme"
}
