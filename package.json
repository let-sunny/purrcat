{
  "name": "purrcat",
  "version": "0.1.8",
  "description": "Lightweight WebSocket client with auto-reconnect, backoff strategies, bounded message buffering, and async iterables",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.global.js",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm,iife --dts --minify --globalName purrcat",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "prepublishOnly": "npm run build && npm test",
    "version": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "websocket",
    "ws",
    "client",
    "realtime",
    "connection",
    "reconnect",
    "backoff",
    "async-iterable",
    "generator",
    "abort-signal",
    "typescript",
    "message-buffer",
    "bounded-buffer"
  ],
  "author": "minseon",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "globals": "^15.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "24.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/let-sunny/purrcat.git"
  },
  "bugs": {
    "url": "https://github.com/let-sunny/purrcat/issues"
  },
  "homepage": "https://github.com/let-sunny/purrcat#readme"
}
